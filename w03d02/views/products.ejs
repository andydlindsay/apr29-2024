<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Products</title>
</head>
<body>
  <h1>All the products!</h1>

  <a href="/products/new">Create a new product!</a>

  <% for (const productId in products) { %>
    <div>
      <h2>Name: <%= products[productId].name %></h2>
      <h3>Description: <%= products[productId].description %></h3>
      <h3>Price: <%= products[productId].price %></h3>
      
      <a href="/products/<%= productId %>/edit">Edit product here</a>

      <form method="POST" action="/products/<%= productId %>/delete">
        <button type="submit">Delete</button>
      </form>
    </div>
  <% } %>
</body>
</html>
